<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:clickable="false"
        android:visibility="gone" >

    </ListView>

    <EditText
        android:id="@+id/editdp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editvg"
        android:layout_alignLeft="@+id/editvg"
        android:layout_marginBottom="102dp"
        android:background="#ffffff"
        android:ems="10"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textdp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editdp"
        android:layout_centerHorizontal="true"
        android:text="Дата проведения"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textvg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editvg"
        android:layout_centerHorizontal="true"
        android:text="Ваша группа" />

    <EditText
        android:id="@+id/editvg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="#ffffff"
        android:ems="10"
        android:padding="5dp">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="Tahoma"
        android:text="Рассписание АПЭК"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:onClick="viewFirst"
        android:text="Выбрать другие параметры"
        android:textColor="#000"
        android:visibility="gone" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editvg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:onClick="tester"
        android:text="Просмотреть рассписание"
        android:textColor="#000" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="297dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="3dp" />

</RelativeLayout>